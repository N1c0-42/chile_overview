        // --- View Switching Logic ---
        function switchView(viewId) {
            // Hide all sections
            document.querySelectorAll('.view-section').forEach(el => el.classList.add('hidden'));
            // Show target section
            document.getElementById(viewId).classList.remove('hidden');
            
            // Update Navigation State
            document.querySelectorAll('.nav-item').forEach(btn => {
                if(btn.dataset.target === viewId) {
                    btn.classList.add('active-nav', 'bg-slate-800');
                    btn.classList.remove('text-slate-300');
                } else {
                    btn.classList.remove('active-nav', 'bg-slate-800');
                    btn.classList.add('text-slate-300');
                }
            });

            // Mobile menu close
            const sidebar = document.getElementById('sidebar');
            if (!sidebar.classList.contains('hidden') && window.innerWidth < 768) {
                sidebar.classList.add('hidden');
            }

            // Trigger chart resize if needed
            if (viewId === 'climate' && window.weatherChartInstance) {
                window.weatherChartInstance.resize();
            }
            if (viewId === 'overview' && window.budgetChartInstance) {
                window.budgetChartInstance.resize();
            }
        }

        // --- Region Update Logic ---
        function updateRegion(regionKey) {
            const data = regionData[regionKey];
            const contentPanel = document.getElementById('region-content');
            const placeholder = document.getElementById('region-content-placeholder');
            
            placeholder.classList.add('hidden');
            contentPanel.classList.remove('hidden');
            
            // Populate Data
            document.getElementById('region-title').textContent = data.title;
            document.getElementById('region-badge').textContent = data.badge;
            document.getElementById('region-icon').textContent = data.icon;
            document.getElementById('region-desc').textContent = data.desc;
            document.getElementById('region-tip').textContent = data.tip;

            // Helper to fill lists
            const fillList = (id, items) => {
                const list = document.getElementById(id);
                list.innerHTML = items.map(item => `<li class="flex items-start"><span class="mr-2 mt-1 text-teal-500">‚û§</span><span>${item}</span></li>`).join('');
            };

            fillList('region-tours', data.tours);
            fillList('region-hikes', data.hikes);

            // Add simple highlight animation
            contentPanel.classList.remove('fade-in');
            void contentPanel.offsetWidth; // trigger reflow
            contentPanel.classList.add('fade-in');
        }

        // --- Mobile Menu ---
        document.getElementById('mobile-menu-btn').addEventListener('click', () => {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('hidden');
            sidebar.classList.toggle('absolute');
            sidebar.classList.toggle('h-screen');
            sidebar.classList.toggle('w-full');
            sidebar.classList.toggle('z-50');
        });

        // --- Chart Initialization ---
        window.addEventListener('load', () => {
            // Weather Chart
            const ctxWeather = document.getElementById('weatherChart').getContext('2d');
            window.weatherChartInstance = new Chart(ctxWeather, {
                type: 'bar',
                data: {
                    labels: ['San Pedro (Norden)', 'Santiago (Mitte)', 'Punta Arenas (S√ºden)'],
                    datasets: [
                        {
                            label: 'Max. Temp (¬∞C)',
