                    plugins: {
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    if (context.dataset.type === 'line') {
                                        return context.dataset.label + ': ' + context.raw + ' (Sehr windig!)';
                                    }
                                    return context.dataset.label + ': ' + context.raw + '¬∞C';
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
